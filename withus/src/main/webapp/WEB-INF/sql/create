CREATE TABLE member (
	memberId	VARCHAR2(255)	PRIMARY KEY,
	password	VARCHAR2(255)	NOT NULL,
	name		VARCHAR2(255)	NOT NULL,
	gender		VARCHAR2(50),
	role		VARCHAR2(255),
	regDate		DATE	DEFAULT	SYSDATE
);

INSERT INTO member (memberId, password, name, gender, role)
