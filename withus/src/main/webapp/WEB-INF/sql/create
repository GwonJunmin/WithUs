--- 그룹 가입신청 ---
CREATE TABLE GroupJoin (
    GJOINID NUMBER PRIMARY KEY,
    GNO NUMBER NOT NULL,
    MEMBERID VARCHAR2(255) NOT NULL,
    GPERMIT NUMBER DEFAULT 0,
    GAPPDATE DATE DEFAULT SYSDATE,
    CONSTRAINT fk_groupjoin_gno FOREIGN KEY (GNO) REFERENCES groups(GNO)
);
-- 가입신청 외래키 추가 --
ALTER TABLE GroupJoin
ADD CONSTRAINT fk_groupjoin_memberid
FOREIGN KEY (MEMBERID)
REFERENCES member(MEMBERID);

-- 그룹원 테이블 --
CREATE TABLE GMember (
    GMEMBERID NUMBER NOT NULL,
    GNO NUMBER NOT NULL,
    MEMBERID VARCHAR2(255) NOT NULL,
    GAUTH NUMBER DEFAULT 1,
    GJOINDATE DATE DEFAULT SYSDATE,
    CONSTRAINT pk_gmember PRIMARY KEY (GMEMBERID),
    CONSTRAINT fk_gmember_gno FOREIGN KEY (GNO) REFERENCES Groups(GNO),
    CONSTRAINT fk_gmember_memberid FOREIGN KEY (MEMBERID) REFERENCES MEMBER(MEMBERID)
);



--그룹 게시판--

CREATE TABLE GBOARD (
    GBNO NUMBER PRIMARY KEY,
    GNO NUMBER NOT NULL,
    MEMBERID VARCHAR2(50) NOT NULL,
    TITLE VARCHAR2(255) NOT NULL,
    CONTENT VARCHAR2(1000) NOT NULL,
    GBCATEID NUMBER,
    GBREGDATE DATE DEFAULT SYSDATE,
    CONSTRAINT FK_GBOARD_GROUPS FOREIGN KEY (GNO) REFERENCES GROUPS(GNO) ON DELETE CASCADE,
    CONSTRAINT FK_GBOARD_GBCATEID FOREIGN KEY (GBCATEID) REFERENCES GBCATE(GBCATEID),
    CONSTRAINT FK_GBOARD_MEMBER FOREIGN KEY (MEMBERID) REFERENCES MEMBER(MEMBERID) ON DELETE CASCADE
);

CREATE SEQUENCE GBOARD_SEQ
    START WITH 1
    INCREMENT BY 1
    NOMAXVALUE
    NOCYCLE;

-- 그룹 신고 기능 추가 --
create table GREPORT(
GREPORTID NUMBER Primary Key,
MEMBERID VARCHAR2(255),
GNO NUMBER(10,0) NOT NULL,
RPCONTENT VARCHAR2(4000) NOT NULL,
RPCATE VARCHAR(255),
REPORTDATE DATE DEFAULT SYSDATE,
CONSTRAINT FK_GREPORT_MEMBER FOREIGN KEY (MEMBERID) REFERENCES MEMBER(MEMBERID),
CONSTRAINT FK_GREPORT_GNO FOREIGN KEY (GNO) REFERENCES GROUPS(GNO)
)
-- 그룹 신고테이블 상태 추가(0 = 확인중, 1= 확인, 2= 거절)---
ALTER TABLE GREPORT ADD rpstatus NUMBER(1) DEFAULT 0;

-- 회원테이블 신고수 추가--
ALTER TABLE member
ADD Report DEFAULT 0;



-- 회원 신고 시퀀스
CREATE SEQUENCE mreport_sequence
START WITH   1
INCREMENT BY 1
NOCACHE;

-- 회원 신고 테이블
CREATE TABLE mreport (
    mreportId   NUMBER          PRIMARY KEY,
    reporterId  VARCHAR2(255)   NOT NULL,
    reportedId  VARCHAR2(255)   NOT NULL,
    rpcontent   VARCHAR2(4000)  NOT NULL,
    rpcate      VARCHAR2(255),
    reportDate  DATE    DEFAULT SYSDATE
);

-- reporterId 열에 대한 외래 키 생성 (CASCADE 옵션)
ALTER TABLE mreport
ADD CONSTRAINT fk_reporterId
FOREIGN KEY (reporterId)
REFERENCES member(memberId)
ON DELETE CASCADE;

-- reportedId 열에 대한 외래 키 생성 (CASCADE 옵션)
ALTER TABLE mreport
ADD CONSTRAINT fk_reportedId
FOREIGN KEY (reportedId)
REFERENCES member(memberId)
ON DELETE CASCADE;

-- 그룹 추천 테이블 --
CREATE TABLE GLIKE(
    LIKENO       NUMBER primary key,
    GNO          NUMBER,
    LIKECHECK    NUMBER,
    MEMBERID     VARCHAR2(255 BYTE),
    FOREIGN KEY (GNO) REFERENCES GROUPS(GNO) ON DELETE CASCADE,
    FOREIGN KEY (MEMBERID) REFERENCES MEMBER(MEMBERID) ON DELETE CASCADE
);

